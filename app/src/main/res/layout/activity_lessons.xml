<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/real_white"
    tools:context="com.epam.LessonsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_50"
            android:gravity="center"
            android:padding="@dimen/double_indent"
            android:text="@string/available_lessons_text"
            android:textColor="@color/real_black"
            android:textSize="@dimen/large_text_size"
            app:fontFamily="@font/indie_flower" />

        <include
            android:id="@+id/fist_lesson"
            layout="@layout/android_components_lesson_item" />

        <include
            android:id="@+id/second_lesson"
            layout="@layout/android_components_lesson_item" />

        <include
            android:id="@+id/third_lesson"
            layout="@layout/android_components_lesson_item" />

    </LinearLayout>
</ScrollView>
