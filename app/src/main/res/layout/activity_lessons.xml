<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epam.LessonsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_50"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/available_lessons_text"
            android:textColor="@color/real_black"
            android:textSize="24sp"
            app:fontFamily="@font/indie_flower" />

        <include layout="@layout/view_components_lesson_item" />

        <include layout="@layout/android_components_lesson_item" />

        <include layout="@layout/clean_code_lesson_item" />

        <include layout="@layout/java_basics_lesson_item" />

        <include layout="@layout/android_studio_tools_lesson_item" />

        <include layout="@layout/github_lesson_item" />

    </LinearLayout>

</ScrollView>