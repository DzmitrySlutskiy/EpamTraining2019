<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_data_photos_scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:paddingLeft="8dp">

    <TextView
        android:id="@+id/profile_photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/status_icon"
        android:paddingTop="6dp"
        android:text="@string/profile_account_photos"
        android:textColor="@color/real_black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/profile_photos_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:paddingTop="6dp"
        android:layout_toRightOf="@id/profile_photos"
        android:text="@string/profile_account_photos_num"
        android:textColor="@color/design_default_color_primary"
        android:textSize="12sp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_below="@id/profile_photos">

        <LinearLayout
            android:id="@+id/photo_gallery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/photo_gallery_image1"
                android:layout_width="124dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:padding="4dp"
                app:srcCompat="@drawable/cars_1" />
            <ImageView
                android:id="@+id/photo_gallery_image2"
                android:layout_width="124dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:padding="4dp"
                app:srcCompat="@drawable/cars_2" />
            <ImageView
                android:id="@+id/photo_gallery_image3"
                android:layout_width="124dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:padding="4dp"
                app:srcCompat="@drawable/cars_3" />
            <ImageView
                android:id="@+id/photo_gallery_image4"
                android:layout_width="124dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:padding="4dp"
                app:srcCompat="@drawable/cars_4" />
        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>
