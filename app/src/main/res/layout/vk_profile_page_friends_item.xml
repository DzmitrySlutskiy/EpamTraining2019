<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_data_friends"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:paddingLeft="8dp">

    <ImageView
        android:id="@+id/status_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_group_black_24dp" />

    <TextView
        android:id="@+id/profile_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="18dp"
        android:layout_toRightOf="@id/status_icon"
        android:text="@string/profile_account_friends"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/imageViewFriend1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="2dp"
        android:contentDescription="friend photo"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/cars_1_round" />

    <ImageView
        android:id="@+id/imageViewFriend2"
        android:layout_width="24dp"
        android:layout_height="24dp"

        android:layout_marginEnd="2dp"
        android:layout_toLeftOf="@id/imageViewFriend1"
        android:contentDescription="friend2 photo"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/cars_3_round" />


</RelativeLayout>
